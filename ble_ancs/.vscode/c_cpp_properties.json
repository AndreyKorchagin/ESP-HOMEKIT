            "cppStandard": "c++17",
            "includePath": [
                "${config:idf.espIdfPath}/components/**",
                "${config:idf.espIdfPathWin}/components/**",
                "${workspaceFolder}/**",
                "${HOMEKIT_PATH}/components/**",
                "${HOMEKIT_PATH}/components/homekit/**",
